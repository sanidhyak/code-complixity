//mario2
#include<stdio.h>
#include<cs50.h>

int main (void)
{int n;
    do
    {
    n = get_int("enter a no. upto 8\t"); //prpompt for user
    }
    while(n<0 || n>8);
   
    for(int i=0;i<n;i++)                    //row loop
    {
        for(int j=0;j<=n;j++)               //column loop
        {
        if (j<n-i)
           { printf(" ");
            }
        else
            printf("*");
        }
        printf("  ");
        for (int m=0;m<=i;m++)          //2nd pyramid
        {
            printf("*");
        }
        printf("\n");
    }

}
